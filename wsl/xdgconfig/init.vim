"# COMMAND
command Wp call s:ConWinpathToWslpath()
function s:ConWinpathToWslpath()
	normal! gv"zy
	let winpath=getreg('z')
	let cmd = 'wslpath -u '''.winpath.''''
	let wp = system(cmd)
	let wpLen = strlen(wp)-2
	call setreg('z',wp[0:wpLen])
	normal! gvd"zP
endfunction

