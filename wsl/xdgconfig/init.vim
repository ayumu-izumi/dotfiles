"# COMMAND
command FP call s:GetFilePath()
function s:GetFilePath()
	let filePath=expand("%:p")
	call s:setreg0(filePath)
	call s:setregClipBoard(filePath)
	echo filePath
endfunction

"## COMMON
function s:setreg0(str)
	call setreg('0',a:str)
endfunction
function s:setregClipBoard(str)
	call setreg('+',a:str)
endfunction
